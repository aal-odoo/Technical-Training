<odoo>
  <data>
   
    <record model="ir.ui.view" id="openacademy_session_views_list">
      <field name="name">openacademy Session Tree</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="course_id"/>
            <field name="instructor_id"/>
            <field name="start_date"/>
            <field name="duration"/>
            <field name="seats"/>
            <field name="taken_seats" widget="progressbar"/>

        </tree>
      </field>
    </record>
      
    
    <record model='ir.ui.view' id='openacademy_session_views_form'>
        <field name='name'>Openacademy Session Form</field>
        <field name='model'>openacademy.session</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name="instructor_id"/>
                        <field name='course_id'/>
                        <field name='active'/>
                        <field name='level'/>
                    </group>
                    <group>
                        <field name='start_date'/>
                        <field name="duration"/>
                        <field name='seats'/>
                        <field name='taken_seats'/>
                    </group>
                     <label for="student_ids"/>
                    <field name="student_ids"/>
                </sheet>
            </form>    
        </field>  
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="openacademy.openacademy_session_action">
      <field name="name">openacademy Session</field>
      <field name="res_model">openacademy.session</field>
      <field name="view_mode">tree,form</field>
    </record>
      
  </data>
</odoo>
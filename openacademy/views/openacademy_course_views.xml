<odoo>
  <data>
   
    <record model="ir.ui.view" id="openacademy_course_views_list">
      <field name="name">openacademy Course Tree</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="level"/>
        </tree>
      </field>
    </record>
      
    
    <record model='ir.ui.view' id='openacademy_course_views_form'>
        <field name='name'>Openacademy Course Form</field>
        <field name='model'>openacademy.course</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='level'/>
                    </group>
                    <notebook>
                        <page string="Description" name="desc">
                            <field name="description"/>
                        </page>
                        <page string="Sessions" name="sessions">
                            <field name="session_ids"/>
                        </page>
                    </notebook>        
                </sheet>
            </form>    
        </field>  
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="openacademy.openacademy_course_action">
      <field name="name">openacademy Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>
      
  </data>
</odoo>
       <record id="view_forum_school_tree" model="ir.ui.view">
            <field name="name">view.forum.school.tree</field>
            <field name="model">forum.school</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <tree string="School" editable="top">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="responsible_id"/>
                    <field name="created_on"/>
                </tree>
            </field>
        </record>

       <record id="view_forum_school_form" model="ir.ui.view">
            <field name="name">view.forum.school.form</field>
            <field name="model">forum.school</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form string="School">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                    
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="School's Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="address"/>
                            </group>
                            <group>
                                <field name="responsible_id"/>
                            </group>
                            <group>
                                <field name="created_on"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>    
    
        <record model="ir.actions.act_window" id="action_forum_views">
            <field name="name">School</field>
            <field name="res_model">forum.school</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">80</field>
        </record>

        <record model="ir.actions.act_window.view" id="action_forum_views_tree">
           <field name="sequence" eval="1"/>
           <field name="view_mode">tree</field>
           <field name="view_id" ref="view_forum_school_tree"/>
           <field name="act_window_id" ref="action_forum_views"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_forum_views_form">
           <field name="sequence" eval="2"/>
           <field name="view_mode">form</field>
           <field name="view_id" ref="view_forum_school_form"/>
           <field name="act_window_id" ref="action_forum_views"/>
        </record>
        
        <menuitem id="forum_school"
                  action="action_forum_views"
                  name="Forum"
                  sequence="20"/> 
    </data>
</odoo>